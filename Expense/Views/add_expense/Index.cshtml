@model IEnumerable<Expense.Models.Addexpense>

@{
    ViewBag.Title = "Index";
}
@Html.Raw(ViewBag.msg)
<label style="background-color:hotpink">
    category name
</label>
<input type="text" name="text" />
<input type="submit" value="search" />
<style>
    .table {
        background-color: lightgoldenrodyellow;
    }

    #t {
        background-color: lightpink;
    }
</style>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" border="1">
    <tr id="t" style="color:darkblue" ;>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cid)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("Delete", "add_expense", new { id = item.Id }))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cid)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |



                    <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete record with Category id=@item.Id');" style="color:red;" />

                </td>
            </tr>
        }
    }


</table>

@{
    Html.RenderAction("Categories");

}

